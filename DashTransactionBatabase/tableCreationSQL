CREATE TABLE USER(
    PUBLIC_KEY TEXT PRIMARY KEY,
    BALANCE REAL,
    DATE_CREATED TEXT,
    LAST_ACTIVE TEXT,
    USER_TYPE TEXT
);

CREATE TABLE MASTERNODE (
    MASTERNODE_ID INTEGER PRIMARY KEY,
    OPERATOR_PUBLIC_KEY TEXT NOT NULL,
    STATUS TEXT,
    COLLATERAL REAL,
    LAST_PAID REAL,
    TOTAL_REWARDS REAL,
    FOREIGN KEY (OPERATOR_PUBLIC_KEY) REFERENCES USER(PUBLIC_KEY)
);

CREATE TABLE BLOCK (
    HASH TEXT PRIMARY KEY,
    PREV_HASH TEXT,
    HEIGHT REAL,
    TIMESTAMP TEXT,
    MINER_PUBLIC_KEY TEXT NOT NULL,
    TRANSACTION_COUNT INTEGER,
    BLOCK_REWARD INTEGER,
    DIFFICULTY INTEGER,
    MERKLE_ROOT TEXT,
    FOREIGN KEY (MINER_PUBLIC_KEY) REFERENCES USER(PUBLIC_KEY)
);

CREATE TABLE DASH_TRANSACTION (
    TRANSACTION_ID INTEGER PRIMARY KEY,
    SENDER TEXT NOT NULL,
    RECEIVER TEXT NOT NULL,
    FEE REAL,
    TIMESTAMP TEXT,
    TYPE TEXT,
    STATUS TEXT,
    FOREIGN KEY (SENDER) REFERENCES USER(PUBLIC_KEY),
    FOREIGN KEY (RECEIVER) REFERENCES USER(PUBLIC_KEY)
);

